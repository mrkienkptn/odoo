<?xml version="1.0"?>
<odoo>
    <record id="farm_crops_action" model="ir.actions.act_window">
        <field name="name">Crops</field>
        <field name="res_model">farm.crops</field>
        <field name="view_mode">tree,form</field>

    </record>
    <record id="farm_crops_view_tree" model="ir.ui.view">
        <field name="name">farm.crops.tree</field>
        <field name="model">farm.crops</field>
        <field name="arch" type="xml">
            <tree string="Crops">
                <field name="name" />
                <field name="date_from" />
                <field name="date_to"/>
                <field name="wharehouse" />
                <field name="stock_location" />
                <field name="description" />
            </tree>
        </field>
    </record>
    <record id="farm_crops_view_form" model="ir.ui.view">
        <field name="name">farm.crops.form</field>
        <field name="model">farm.crops</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_left oe_avatar"/>

                    <group>
                        <field name="name" />
                        <field name="date_from" />
                        <field name="date_to" />

                    </group>
                    <group>
                        <field name="wharehouse" />
                        <field name="stock_location" />
                        <field name="description" />
                    </group>

                    <sheet>
                        <notebook>
                            <page string = "Crop Materials">
                            </page>

                            <page string = "Crop Labours">
                            </page>

                            <page string = "Crop Overheads">
                            </page>

                            <page string = "Crop Diseases">
                                <field name="diseases_cure_ids"/>
                            </page>

                            <page string = "Crop Processes">
                            </page>

                            <page string = "Description">
                            </page>
                        </notebook>
                    </sheet>


            </sheet>
        </form>
    </field>
</record>

</odoo>