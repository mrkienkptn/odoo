<odoo>
    <record id="farm_dieases_cure_action" model="ir.actions.act_window">
        <field name="name">Dieases</field>
        <field name="res_model">farm.dieases.cure</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="farm_díeases_cure_view_tree" model="ir.ui.view">
        <field name="name">farm.díeases.cure.tree</field>
        <field name="model">farm.dieases.cure</field>
        <field name="arch" type="xml">
            <tree >
                <field name="image" widget="image" class="oe_left oe_avatar"/>
                <field name="name" />
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="farm_díeases_cure_view_form" model="ir.ui.view">
        <field name="name">farm.díeases.cure.form</field>
        <field name="model">farm.dieases.cure</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_left oe_avatar"/>
                    <group>
                        <field name="name" />
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" />
                        </page>
                    </notebook>

                    <notebook>
                        <page String="Crops"></page>
                    </notebook>

                </sheet>
            </form>

        </field>
    </record>

</odoo>