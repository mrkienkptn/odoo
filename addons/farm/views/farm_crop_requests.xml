<?xml version="1.0"?>
<odoo>

    <record id="farm_crop_requests_view_kanban" model="ir.ui.view">
        <field name="name">farm.crop.requests.kanban</field>
        <field name="model">farm.crop.requests</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" on_create="quick_create" >
                <field name="name"/>
                <field name="responsible_user_id"/>
                <field name="stage_id"/>
                <field name="supervisor_id" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="code" />
                <templates>
                    <t t-name="kanban-box" >
                        <div class="oe_kanban_global_click">
                            <p><field name="code" /></p>
                        </div>
                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="farm_crop_requests_action" model="ir.actions.act_window">
        <field name="name">Crop Requests</field>
        <field name="res_model">farm.crop.requests</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'kanban', 'view_id': ref('farm_crop_requests_view_kanban')})]" />
    </record>
</odoo>