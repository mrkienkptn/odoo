<?xml version="1.0"?>
<odoo>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
                <field name="property_type_id" />
                <field name="description" />
                <field name="postcode" />
                <field name="date_availability" />

            </tree>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="E">
                <header>
                    <button name="sold_property" type="object" string="Sold"/>
                    <button name="cancel_property" type="object" string="Cancel"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"></field>
                    </h1>
                    <!-- <group> -->
                    <field name="tag_ids" widget="many2many_tags"/>
                    <!-- </group> -->

                    <group>

                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="property_type_id" />
                        </group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="best_price" />
                        </group>
                        <group>
                            <field name="selling_price" />
                        </group>
                        <group>
                            <field name="date_availability"></field>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                </group>
                                <group >
                                    <field name="bedrooms"></field>
                                </group>
                                <group >
                                    <field name="living_area" string="Living Area (sqm)"></field>
                                </group>
                                <group>
                                    <field name="garden_area" string="Garden Area (sqm)" />
                                </group>
                                <group >
                                    <field name="facades"></field>
                                </group>
                                <group >
                                    <field name="garage"></field>
                                </group>
                                <group >
                                    <field name="garden"></field>
                                </group>
                                
                                <group >
                                    <field name="garden_orientation"></field>
                                </group>
                                <group>
                                    <field name="total_area" />
                                </group>
                            </page>
                            <page string="Offers">

                                <field name="offer_ids">
                                    <tree editable="bottom">
                                        <field name="price" />
                                        <field name="partner_id" />
                                        <field name="validity" string="Validity(days)"/>
                                        <button name="accept_offer" type="object" string="Accept" icon="fa-check" />
                                        <button name="refuse_offer" type="object" string="Refuse" icon="fa-times" />
                                        <field name="date_deadline" string="Deadline"/>
                                        <field name="status" />
                                    </tree>
                                </field>

                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="buyer_id"/>
                                </group>
                                <group>
                                    <field name="seller_id"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="name" string="Name"/>
                <field name="postcode" string="Postcode" />
                <field name="expected_price" string="Expected Price" />
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living Area(sqm)"/>
                <field name="facades" string="Facades"/>
                <separator/>
                <filter name="state" string="State" domain="['|',('state', '=', 'new'), ('state', '=', 'offer_received')]" context="{'group_by': 'postcode'}" />
            </search>
        </field>
    </record>
</odoo>
